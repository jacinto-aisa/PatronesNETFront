
@model IEnumerable<Desaprendiendo.Views.ViewComponents.ViewModels.ContentItem.ContentItem>
<a data-toggle="collapse" href="#collapse-example" aria-expanded="true" aria-controls="collapse-example" id="heading-example" class="d-block">
    <i class="fa fa-chevron-down pull-right"></i> Pulsar para ver info detallada
</a>

<div class="container-fluid" style="margin-top: 10px;">
    <div class="card-deck">
        <div class="row no-gutters">
            @foreach (var item in Model)
            {
                <div class="col-sm-4">
                    <div class="container">
                        <div class="card-stack">
                            <a class="buttons prev" href="#">&lt;</a>
                            <ul class="card-list">

                                @foreach (var sub in item.SubCategoria)
                                {
                                    <li class="card" style="background: #00416A;
                                      background: -webkit-linear-gradient(to right, #FFE000, #799F0C, #00416A);
                                      background: linear-gradient(to right, #FFE000, #799F0C, #00416A);">

                                      

                                        <h3 class="card-list__text">@Html.Raw(sub.ComentarioHtml) </h3>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


